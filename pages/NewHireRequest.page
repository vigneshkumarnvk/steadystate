<apex:page standardController="New_Hire_Request__c" lightningStylesheets="true"  >
    <apex:form >
        <apex:pageBlock title="New Hire Request">
            <apex:pageBlockSection columns="1">
              
              <font color="red" >
             <div style="text-align:center;font-size: 15px;">
                 <B>**EMPLOYEE INFORMATION **</B></div>
                </font>  
                <apex:inputField value="{!New_Hire_Request__c.Employee_First_Name__c}"/>	
                <apex:inputField value="{!New_Hire_Request__c.Employee_Last_Name__c}"/>
                <apex:inputField value="{!New_Hire_Request__c.Preferred_Name__c}"/>
                <apex:inputField value="{!New_Hire_Request__c.Manager__c}"/>
                <apex:inputField value="{!New_Hire_Request__c.Service_Center__c}"/>
                <apex:inputField value="{!New_Hire_Request__c.Employee_Start_date__c}"/>
                <apex:inputField value="{!New_Hire_Request__c.Resource_Type__c}"/> 
                <apex:inputField value="{!New_Hire_Request__c.Title_Category__c}"/>
                <apex:inputField value="{!New_Hire_Request__c.ADP_Title__c}"/>
                <font color="red">
             <div style="text-align:center;font-size: 15px;">
                 <B>**ASSETS NEEDED **</B></div>
                </font>
                <apex:inputField value="{!New_Hire_Request__c.Equipment_Supplies__c}"/>
                <apex:inputField value="{!New_Hire_Request__c.Software__c}"/>
             
                
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save"/>
                <apex:commandButton action="{!cancel}" id="cancelButton" value="Cancel"/>
            </apex:pageBlockButtons>
            <font color="red">
             <div style="text-align:center;font-size: 15px;">
                 <B>**PLEASE MAKE SURE ALL THE INFORMATION IS CORRECT BEFORE SAVING**</B></div>
            
             
        
    </font>
            
        </apex:pageBlock>
    </apex:form>
</apex:page>