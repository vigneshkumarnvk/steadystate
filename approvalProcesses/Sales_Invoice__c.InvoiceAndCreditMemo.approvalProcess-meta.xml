        <action>
            <name>ResetApprovedAmount</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ResetApprovedLevel</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ResetApprovedMargin</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ResetPendingApprovalFrom</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ResetPendingApprovalLevel</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SetApprovalStatusToDraft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SetApprovedToFalse</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
