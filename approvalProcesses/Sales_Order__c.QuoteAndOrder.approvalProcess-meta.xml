<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Order_Total_Amount__c</field>
        <field>Order_Total_Amount_Incl_Tax__c</field>
        <field>Total_Cost__c</field>
        <field>Total_Profit__c</field>
        <field>Total_Profit_Pct__c</field>
        <field>Bill_to_Customer_No__c</field>
        <field>Surcharge_Type__c</field>
        <field>Pay_Rule__c</field>
        <field>Site_Scope__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>Approver</label>
        <name>Approver</name>
    </approvalStep>
    <emailTemplate>unfiled$public/ACV_SQ_SO_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Mark_Approval_Step_Completed</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ResetApprovedAmount</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ResetApprovedLevel</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ResetApprovedMargin</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ResetPendingApprovalFrom</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ResetPendingApprovalLevel</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SetApprovalStatusToRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SetApprovedToFalse</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SO_Approval_Rejection</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>QuoteAndOrder</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>ResetApprovedAmount</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ResetApprovedLevel</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ResetApprovedMargin</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ResetPendingApprovalFrom</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ResetPendingApprovalLevel</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SetApprovalStatusToDraft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
