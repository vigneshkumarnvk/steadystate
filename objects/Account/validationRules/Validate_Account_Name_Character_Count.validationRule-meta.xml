<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Account_Name_Character_Count</fullName>
    <active>false</active>
    <errorConditionFormula>AND(LEN(Name) &gt; 50, RecordTypeId &lt;&gt; '012f4000000Ulp0')</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>Account name must not exceed 50 characters.</errorMessage>
</ValidationRule>
