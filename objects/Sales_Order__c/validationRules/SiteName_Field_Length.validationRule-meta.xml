<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SiteName_Field_Length</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISCLONE()),
NOT( Expired__c ),
    LEN(Site_Name__c) &gt; 40
)</errorConditionFormula>
    <errorMessage>Site Name value is too long (max length = 40). Please edit the Site Name and Save.</errorMessage>
</ValidationRule>
