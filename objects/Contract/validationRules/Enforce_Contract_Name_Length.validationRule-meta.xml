<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Enforce_Contract_Name_Length</fullName>
    <active>true</active>
    <description>Enforces Contract name to be 40 characters or less</description>
    <errorConditionFormula>LEN(Name) &gt; 40</errorConditionFormula>
    <errorMessage>Contract Name cannot exceed 40 characters.</errorMessage>
</ValidationRule>
